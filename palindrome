<body>
    <!--for giving <div id="wrapper"> in a short way write [div#wrapper]
        if it for class write [div.wrapper]-->
    <div id="wrapper">
        <h2>Palindrome Checker</h2>
        <div class="inputdiv">
            <input type="text" id="input" placeholder="Enter here">
        </div>
        <div>
            <button type="submit" onclick="palin()">check here</button>
        </div>
        <div id="result"> 

        </div>

    </div>
    <script>
       function palin(){
        let input = document.getElementById("input").value
        let num2 = input.toLowerCase().replace(/[^a-z]/g, "")
        let palinNum = num2.split("").reverse().join("")
        let res
        if (num2 == palinNum)
            res="It's a palindrome"
        else
            res="It's not a palindrome"
        
        
        document.getElementById("result").innerHTML=res
       }
    </script>
 
    
</body>
